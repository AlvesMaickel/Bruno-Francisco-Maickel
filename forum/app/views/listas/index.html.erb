<h2> Listas</h2>

<% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
<% end %>

<table class="table table-bordered" 
		style="width: 700px;">

<% @listas.each do |c| %>
<tr>
	<th>
    	<%= link_to c.nome, lista_path(c) %>
    </th>
    
    <%if session[:admin] %>
    <th style="width: 102px;" style="height: 20px">
    	<%= link_to "Editar", edit_lista_path(c) %>
    </th>
    <th style="width: 102px;" style="height: 20px">
 		<a href="listas/deletar/<%=c.id %>">Excluir </a>
 	</th>
 <% end %>

 </tr>

    <br><br>

<% end %>

</table>


 <%if session[:admin] %>
<%= link_to "Upload de Lista", new_lista_path %>
<% end %>